html(lang='en')
	head
		title= title
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='description', content= description)
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
		meta(name='author', content='Joe Lissner')

		// Bootstrap theme imports
		link(rel='stylesheet', href='/css/bootstrap.min.css')
		link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css', type="text/css")
		link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic", type="text/css")

		link(rel='stylesheet', href='/styles/styles.css')


		script(type='text/javascript', src="js/jquery.min.js")
		script(type='text/javascript', src="js/bootstrap.min.js")

		//// custom scripts
		script(type='text/javascript', src='/scripts/scripts.min.js')
		script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
		script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")

	body
		header
			nav.navbar.navbar-default
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#BagusCoNav', aria-expanded='false')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/') bagusco
					#BagusCoNav.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li: a(href='/') Home
							//li: a(href='/blog') Blog
							li: a(href='/#Team') Team
							li: a.contact-us(href='/contact-us') Contact Us
		main(role='document')
			block content

		footer
			.container
				ul.list-inline
					li: a(href='#') Back to Top
					li: a.contact-us(href='/contact-us') Contact Us
					li &copy;&nbsp;
						span= new Date().getFullYear()